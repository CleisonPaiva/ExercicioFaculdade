namespace ConsoleApplication8
{
    class CalculadoraInt
    {
        private int num1;
        private int num2;


        public CalculadoraInt (int n1, int n2)
        {
            num1 = n1;
            num2 = n2;
        }

        public CalculadoraInt()
        {
            num1 = 0;
            num2 = 0;
        }


        public int Getnum1()
        {
            return num1;
        }

        public void Setnum1(int numero1)
        {
            num1 = numero1;
        }

        public int Getnum2()
        {
            return num2;
        }

        public void Setnum2(int numero2)
        {
            num2 = numero2;
        }

        public int opsoma()
        {
            int soma = num1 + num2;
            return soma;
        }

        public int opdivisao()
        {
            int divisao = num1 / num2;
            return divisao;
        }

        public int opmultiplicacao()
        {
            int multiplicacao = num1 * num2;
            return multiplicacao;
        }

        public int opsubtracao(){
            int subtracao = num1 - num2;
            return subtracao;
        }

        public static int soma(int num1, int num2)
        {
            int resultsoma = num1 + num2;
            return resultsoma;
        }

        public int maiornumero()
        {
            int maior;

            if (num1 > num2)
            {
                maior = num1;
                return maior;
            }

            else
            {
                maior = num2;
                return maior;
            }

            if (num1 == num2)
            {
                Console.WriteLine("opa os numeros s√£o iguais !!!");
            }
           
        }
    }
}
